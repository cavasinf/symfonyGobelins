{% extends "base.html.twig" %}

{% block pageHeading %}
    Show details
{% endblock %}

{% block content %}

    <div class="card mb-4">
        <img class="card-img-top" src="{{ asset('upload/'~show.mainPicture) }}" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">{{ show.name }}</h2>
            <p class="card-text">{{ show.abstract }}</p>
            <form method="post">
                <a href="{{ path("show_delete", {'id': show.id}) }}" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                <input type="hidden">
            </form>
        </div>
        <div class="card-footer text-muted">
            Created on {{ show.releaseDate | date('Y-m-d') }} by {{ show.author.lastname }}
        </div>
    </div>

{% endblock %}













































































































































